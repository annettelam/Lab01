@page
@model Lab01.Pages.IndexModel
@{
    ViewData["Title"] = "Annette Lam";
}

<div class="text-center">
    <h1 class="display-4">Lab 01 Zodiac</h1>
    <p>Annette Lam A01333174 Set D</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post">
                <div class="form-group">
                    <label for="year">Year:</label>
                    <input type="number" asp-for="Year" class="form-control" id="year" name="year"
                        placeholder="Enter a year">
                </div>

                <div class="mt-3">
                    <button type="submit" asp-page-handler="GetZodiac" class="btn btn-primary">Get Zodiac</button>
                    <button type="submit" asp-page-handler="Clear" class="btn btn-success ml-2">Clear</button>
                </div>
            </form>

            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @Model.ErrorMessage
                </div>
            }

            @if (Model.ZodiacSign != null)
            {
                <div class="alert alert-success mt-3" style="max-width: 300px; margin: 0 auto; text-align: center;">
                    Your zodiac is <strong>@(char.ToUpper(Model.ZodiacSign[0]) +
                    Model.ZodiacSign.Substring(1).ToLower())</strong>.
                    <div class="mt-3">
                        <img src="~/images/@(Model.ZodiacSign.ToLower()).png" alt="@Model.ZodiacSign"
                            style="max-width: 100%; height: auto;" />
                    </div>
                </div>
            }

        </div>
    </div>
</div>
